
@model List<NamrataKalyani.Models.ServiceModel>

 @{
    ViewBag.Title = "ServiceInfo";
}

<style>
    .table > tr > td {
        font-size: 12px;
    }

    div, a, th, td {
        font-size: 14px;
    }
</style>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />


<h2>ServiceInfo</h2>
<div style="text-align:right">
    @Html.ActionLink("Create","CreateService", "Doc",null, new { @class = "btn btn-primary" })
</div>

<table class="table table-bordered table-responsive" id="example">
    <thead>
        <tr>
            <th>ServiceNo</th>
            <th>ServiceName</th>
            <th>ShortName</th>
            <th>OP</th>
            <th>LDSL</th>
            <th>Method</th>
            <th>Sample</th>
            <th>Schedule</th>
            <th>CutOfTime</th>
            <th>TAT</th>
            <th>Vacutainer</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceNo</td>
                <td>@item.ServiceName</td>
                <td>@item.ShortName</td>
                <td>@item.OP</td>
                <td>@item.LDSL</td>
                <td>@item.Method</td>
                <td>@item.Sample</td>
                <td>@item.Schedule</td>
                <td>@item.CutOfTime</td>
                <td>@item.TAT</td>
                <td>@item.Vacutainer</td>
                <td>@Html.ActionLink("Edit", "EditService", new { id = @item.ServiceNo }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
        </tbody>
</table>

@*@Html.PagedListPager(Model, page => Url.Action("ServiceInfo", new { page }))*@

 <script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>