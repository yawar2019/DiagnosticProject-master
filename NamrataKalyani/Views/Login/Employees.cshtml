@model IEnumerable<NamrataKalyani.Models.RegistrationModel>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Registration", null,new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emalid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.RoleId)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emalid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
       
        <td>
            @{var Role = item.RoleId == 1 ? "Admin" : "Employee";}@Role
        </td>
        
        <td>
            @{var Status = item.status == true ? "Active" : "In Active";}@Status


        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
