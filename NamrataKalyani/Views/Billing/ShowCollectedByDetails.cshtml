
@{
    ViewBag.Title = "ShowCollectedByDetails";
}


@model IEnumerable<NamrataKalyani.Models.CollectedByModel>
@{ ViewBag.Title = "GetBillingInfo";
    Layout = "~/Views/Shared/_MyLayout.cshtml"; }
<style>
    th, td {
        white-space: nowrap;
    }
</style>
<link href="~/Content/twitter-bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.2/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Content/dataTables.dateTime.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css" />

<div class="panel panel-primary ">
    <div class="panel-heading headingcolor">
        <h2>Collected Info</h2>
    </div>
</div>

<div class="container">
    <div style="text-align:right">
        @Html.ActionLink("Create", "SaveCollectedByInfo", "Billing", new { @Class = "btn btn-success" })
    </div>
   
    <table id="mytable" class="table table-striped table-bordered w-auto text-xsmall" style="width:100%">
        <thead>
            <tr>

                <th>Collected Id</th>
                <th>CollectedBy Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.CollectedById)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CollectedByName)
                    </td>

                    <td>
                        <a href="~/Billing/UpdateCollectedByInfo/@item.CollectedById"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr> }
        </tbody>
    </table>
</div>



